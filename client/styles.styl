#login-buttons
  padding 15px 10px
  line-height 18px
  a.login-link-text
    color #f0f0f0

.container
  margin-top: 20px

.btn:focus
  outline: 0

a.soundcloud
  background-image: url("https://developers.soundcloud.com/assets/powered_by_large_white-de881ecad8561c2131e7676fa9e92738.png")
  float: right;
  margin: 0 10px 5px 5px
  height: 50px
  width: 50px
  background-size: 100%
  background-repeat: no-repeat

#messages-container
  margin-top 15px
  padding: 20px 10px
  .message
    padding: 5px 10px 0px
    border-radius: 3px
    border: 1px solid #eee
  .message:hover
    background-color: #eaeaea
  .message:active
    border-color: rgb(164,211,162)
  .add-to-playlist
    float: right
    color: black
  .add-to-playlist:hover
    color: rgb(164,211,162)
  .username,
  .play
    cursor: pointer
  .username:hover
    color: #666

.playlist-selection
  position: fixed
  margin-left: -200px
  margin-top: -100px
  width: 400px
  text-align: center
  top: 50%
  left: 50%
  z-index: 2
  background: #eee
  input,
  .cancel
    position: relative
    z-index: 2
    cursor: pointer
    background #eee
  h4
    color: black

.playlist-selection:before
  content: ''
  background: #fff
  opacity: .5
  top: 0
  position: fixed
  left: 0
  right: 0
  bottom: 0
  z-index: 1

.jumbotron
  padding-bottom: 260px
  .search-input
    z-index: 0

#users
  margin-top -7px
  margin-bottom 10px
  .label
    margin-right .5em
  .label.idle
    background-color #B8B8B8

#player
  overflow: hidden
  margin-top: 10px
  .skip
    margin-top: 10px
    width: 100px

#player-sticky
  border-top: 2px solid #333
  position: fixed
  bottom: 0
  width: 100%
  min-height: 30px
  background-color: #eee
  padding: 20px
  .track-info
    width: 50%
    display: inline
    float: left
    min-height: 50px
  button
    display: inline
    float: left
  .timer
    position: relative
    span.load
      position: absolute
      left: 0
      width: 0
      top: 0
      bottom: 0
      opacity: .3
      background: green
      border-radius 3px
  .progress
    width: 400px
    position: relative
  li
    background-color: #eee
    position: relative;
    overflow: hidden;

#profile
  .profile-pic
    height: 100px
    width: 100px
    float: left
    margin-right: 20px
  .btn
    display: block
    clear: both
    margin-top: 5px
  .edit-description
    margin-top: 20px
    float: left
  .form-group
    margin-top: 10px
    float: left
    display: block
    clear: both
  .well
    overflow: hidden
#playlists
  ul
    padding: 0
  .playlist
    list-style-type: none

.queue
  margin-top: 10px
  width: 100%
  overflow-x: scroll
  border: 2px solid lightgrey
  border-radius: 5px;
  padding: 10px
  ul
    width: 100000px
    margin: 0
    padding: 0
    padding-right: 10px
  li
    display: inline
    width: 300px
    margin: 0 5px
    border: 1px solid lightgrey
    padding: 5px
    float: left
    overflow: hidden
    height: 100px
  span
    float: left
  .title
    width: 180px
    overflow: hidden
    margin-left: 5px
  .user
    width: 180px
    overflow: hidden
    margin-left: 5px
